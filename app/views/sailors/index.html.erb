<h1>Listing sailors</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sailors.each do |sailor| %>
      <tr>
        <td><%= link_to 'Show', sailor %></td>
        <td><%= link_to 'Edit', edit_sailor_path(sailor) %></td>
        <td><%= link_to 'Destroy', sailor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sailor', new_sailor_path %>
